<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            >

            <cn.longrise.www.androidprogress.activity.customDrawingActivity.codeCustomDrawing.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                app:text="My god"
                app:textSize="30sp"
                app:textColor="#ff00ff"
                android:background="#ffff00"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="左边是自定义TextView"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textAllCaps="false"
                />

        </LinearLayout>

        <cn.longrise.www.androidprogress.activity.customDrawingActivity.codeCustomDrawing.MyWatch
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            app:myWatchColorLong="#000000"
            app:myWatchColorShort="#808080"
            app:myWatchPadding="2dp"
            app:myWatchTextSize="16sp"
            app:myWatchHourPointWidth="10dp"
            app:myWatchHourPointColor="#000000"
            app:myWatchMinutePointWidth="5dp"
            app:myWatchMinutePointColor="#808080"
            app:myWatchSecondPointWidth="2dp"
            app:myWatchSecondPointColor="#ff0000"
            app:myWatchPointEndLength="20dp"
            />
    </LinearLayout>

</ScrollView>
